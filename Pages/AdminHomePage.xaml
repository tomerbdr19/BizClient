<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
             x:Class="BizClient.Pages.AdminHomePage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:BizModels.Model"
             xmlns:viewmodel="clr-namespace:BizClient.ViewModel"
             x:DataType="viewmodel:AdminHomePageViewModel"
             Title="AdminHomePage">
    <VerticalStackLayout
        Spacing="36"
        Margin="40"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        WidthRequest="300">
        <Button
            Text="Subscribes list"
            Command="{Binding OnSubscribesListClickCommand}"
            />
        <Button
            Text="Add Post"
            Command="{Binding OnAddPostClickCommand}"
            />
        <Button
            Text="Coupons"
            Command="{Binding OnCouponsClickCommand}"
            />
        <!--<Button
            Text="Messages"
            Command="{Binding OnMessagesClickCommand}"
            />-->
    </VerticalStackLayout>
</ContentPage>