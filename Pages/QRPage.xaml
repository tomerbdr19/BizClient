<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BizClient.Pages.QRPage"
             x:Name="self">
    <FlexLayout Direction="Column" AlignItems="Center" JustifyContent="Center">
        <Label Text="Ask the business to scan this QR code"/>
        <Image Margin="12" Source="{Binding QRImageUrl,Source={x:Reference self}}"/>
    </FlexLayout>
</ContentPage>
