<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BizClient.Pages.CustomerRegistrationPage"
             xmlns:viewmodel="clr-namespace:BizClient.ViewModel"
             x:DataType="viewmodel:CustomerRegistrationViewModel"
             Title="Customer registration">
    <VerticalStackLayout
        Spacing="18"
        Margin="40"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        WidthRequest="300">
        <Label 
            Text="Hi, Please sign in"/>
        <VerticalStackLayout>
            <Label Text="First name"/>
            <Entry 
                Text="{Binding FirstName, Mode=TwoWay}"
                />
        </VerticalStackLayout>
        <VerticalStackLayout>
            <Label Text="Last name"/>
            <Entry 
                Text="{Binding LastName, Mode=TwoWay}"
                />
        </VerticalStackLayout>
        <VerticalStackLayout>
            <Label Text="Phone"/>
            <Entry 
                Text="{Binding Phone, Mode=TwoWay}"
                />
        </VerticalStackLayout>
        <VerticalStackLayout>
            <Label Text="Email"/>
            <Entry 
                Text="{Binding Email, Mode=TwoWay}"
                />
        </VerticalStackLayout>
            <VerticalStackLayout>
                <Label Text="Password"/>
                <Entry 
                Text="{Binding Password1, Mode=TwoWay}"
                IsPassword="True"
                />
        </VerticalStackLayout>
        <VerticalStackLayout>
            <Label Text="Enter the password again please"/>
            <Entry 
                Text="{Binding Password2, Mode=TwoWay}"
                IsPassword="True"
                />
        </VerticalStackLayout>
        <Button
            Text="Registration"
            Command="{Binding OnRegistrationClickCommand}"
            />
    </VerticalStackLayout>
</ContentPage>