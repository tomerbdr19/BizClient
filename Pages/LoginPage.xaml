<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
             x:Class="BizClient.Pages.LoginPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:BizClient.Model"
             xmlns:viewmodel="clr-namespace:BizClient.ViewModel"
             x:DataType="viewmodel:LoginPageViewModel"
             Title="LoginPageView">
    <VerticalStackLayout
        Spacing="36"
        Margin="40"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        WidthRequest="300">
        <Label 
            Text="Hi, Please sign in"/>
        <VerticalStackLayout>
            <Label Text="Email"/>
            <Entry 
                Text="{Binding Email, Mode=TwoWay}"
                />
        </VerticalStackLayout>
        <VerticalStackLayout>
            <Label Text="Password"/>
            <Entry 
                Text="{Binding Password, Mode=TwoWay}"
                IsPassword="True"
                />
        </VerticalStackLayout>
        <Button
            Text="Login"
            Command="{Binding OnLoginClickCommand}"
            IsEnabled="{Binding IsLoginButtonEnabled}"
            />
    </VerticalStackLayout>
</ContentPage>
