<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
             x:Class="BizClient.Pages.SubscribesListPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:BizClient.ViewModel"
             xmlns:views="clr-namespace:BizClient.View"
             xmlns:models="clr-namespace:BizModels.Model"
             x:DataType="viewmodels:SubscribesListPageViewModel"
             Title="Subscribes List">
    <VerticalStackLayout>
        <Grid ColumnDefinitions="*">
            <CollectionView ItemsSource="{Binding Subscribes}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="10"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Subscription">
                        <views:SubscribesListView
                        SubscribeName="{Binding Business.Name}"
                        />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </VerticalStackLayout>
</ContentPage>