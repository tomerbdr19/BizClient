<?xml version="1.0" encoding="utf-8" ?>
<Frame       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:BizModels.Model"
             x:Class="BizClient.View.PublishPostView"
             xmlns:viewmodel="clr-namespace:BizClient.ViewModel"
             x:DataType="viewmodel:PublishPostViewModel"
             StyleClass="card"
             >
    <VerticalStackLayout
        Spacing="36"
        Margin="40"
        HorizontalOptions="Center"
        VerticalOptions="Center">
        <VerticalStackLayout>
            <Label Text="What do you want to share?"/>
            <Entry 
                HeightRequest="70" 
                WidthRequest="300"
                Text="{Binding PublishPost.Caption,Mode=OneWayToSource }"
                />
            <Image Source="{Binding ImageUrl,Mode=OneWay }"
                   x:Name="image"
                   IsVisible="{Binding IsVisible,Mode=OneWay}"
                   Aspect="AspectFill"
                   HeightRequest="100"
                   WidthRequest="100" />
            <Button
            Text="Add picture"
            Command="{Binding OnAddPictureClickCommand}"
            />
            <Button
            Text="Publish"
            Command="{Binding OnPublishClickCommand}"
            />
        </VerticalStackLayout>
    </VerticalStackLayout>
</Frame>